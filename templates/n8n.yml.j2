  action: |-
    #!/bin/bash
    set -eux

    PORT=5678
    NODE_ENV=production
    N8N_RELEASE_TYPE=stable

    {% raw %}npm install -g n8n@v{{ image.serial }}{% endraw %}
    touch /opt/n8n/.installed__

    systemctl enable n8n.service
